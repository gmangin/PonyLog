sudo mkdir /etc/update-motd.d

sudo emacs /etc/update-motd.d/00-ponies

sudo cat /etc/update-motd.d/00-ponies
#! /bin/sh
echo "==============================================="

echo "Welcome $USER" | figlet | ponysay
